@* 添加书籍 *@
<div class="modal fade" id="addBookModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">添加新书籍</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">书名:</label>
                        <input type="text" class="form-control" id="book-title" name="bookTitle">
                    </div>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">作者:</label>
                        <input type="text" class="form-control" id="book-author" name="bookAuthor">
                    </div>
                    <div class="alert alert-danger" role="alert" id="errorTip" style="display:none;">

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary" onclick="AddBook()">确定</button>
            </div>
        </div>
    </div>
</div>

@* 书籍上传 *@
<div class="modal fade" id="uploadBookModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">上传书籍（PDF）</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input type="file" id="testfile" name="test" multiple />
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script>
        $(function () {
            GetBookList();
            $('#addBookModal').on('show.bs.modal', function (event) {
                var modal = $(this);
                modal.find('.modal-body input').val("");
                modal.find('.modal-body textarea').val("");
            });
        });

        function GetBookList() {
            $.getJSON("Book/BookLists", function (result) {
                $("#bookTable").html("");
                result.forEach(function (item) {
                    var downStr = '<button type="button" class="btn btn-default" onclick="download(' + item.id + ')">' +
                        '<svg class="bi bi-cloud-download" width="32" height="32" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">' +
                        '<path d="M4.887 5.2l-.964-.165A2.5 2.5 0 1 0 3.5 10H6v1H3.5a3.5 3.5 0 1 1 .59-6.95 5.002 5.002 0 1 1 9.804 1.98A2.501 2.501 0 0 1 13.5 11H10v-1h3.5a1.5 1.5 0 0 0 .237-2.981L12.7 6.854l.216-1.028a4 4 0 1 0-7.843-1.587l-.185.96z" />' +
                        '<path fill-rule="evenodd" d="M5 12.5a.5.5 0 0 1 .707 0L8 14.793l2.293-2.293a.5.5 0 1 1 .707.707l-2.646 2.646a.5.5 0 0 1-.708 0L5 13.207a.5.5 0 0 1 0-.707z" clip-rule="evenodd" />' +
                        '<path fill-rule="evenodd" d="M8 6a.5.5 0 0 1 .5.5v8a.5.5 0 0 1-1 0v-8A.5.5 0 0 1 8 6z" clip-rule="evenodd" />' +
                        '</svg>' +
                        '</button>';
                    $("#bookTable").append(
                        '<tr>' +
                        '<th scope="row">' + item.id + '</th>' +
                        '<td>' + item.title + '</td>' +
                        '<td>' + item.auther + '</td>' +
                        '<td>' +
                        (item.url == null ? '暂无资源' : downStr) +
                        '</td>' +
                        '<td>' +
                        '<button type="button" class="btn btn-primary" onclick="showUploadModal(' + item.id + ')">上传</button>&nbsp&nbsp' +
                        '<button type="button" class="btn btn-danger" onclick="DeleteBook(' + item.id + ')">删除</button>' +
                        '</td>' +
                        '</tr>');
                });

            });
        }

        function AddBook() {
            $.post("Book/Create",
                {
                    Title: $("#book-title").val(),
                    Auther: $("#book-author").val(),
                },
                function (result) {
                    if (result.isSuccess) {
                        alert(result.message);
                        GetBookList();
                        $('#addBookModal').modal('hide');
                    } else {
                        $("#errorTip").html(result.message);
                        $("#errorTip").css("display", "block");
                    }
                })
        }

        function download(id) {

            window.location.href = "Book/Download?bookId=" + id;
        }

        function showUploadModal(id) {
            $('#testfile').fileinput({
                language: 'zh',
                uploadUrl: "Book/Upload?bookId=" + id,
                showCaption: true,
                showUpload: true,
                showRemove: true,
                showPreview: false,
                showClose: true,
                maxFileCount: 1,
                allowedFileExtensions: ['pdf'],
                browseClass: 'btn btn-primary'
            });
            $('#testfile').fileinput('reset');

            $("#uploadBookModal").modal('show')


            $("#testfile").on("fileuploaded", function (event, data, previewId, index) {
                alert("上传成功");
                $("#uploadBookModal").modal("hide");

            });

        }

        function DeleteBook(id) {
            $.post("Book/Delete",
                {
                    bookId: id
                },
                function (result) {
                    alert(result.message);
                    if (result.isSuccess) {
                        GetBookList();
                    }
                })
        }
    </script>
}

